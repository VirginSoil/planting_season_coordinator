.bed-info
  = form_for @bed, url: bed_path(@bed.id), method: :patch do |bed|
    = bed.label :name, "Bed Name"
    = bed.text_field :name
    = bed.label :zipcode, " Zipcode"
    = bed.text_field :zipcode
    = bed.label :notes, "Notes"
    = bed.text_area :notes
    = bed.label :width, "Width"
    = bed.text_field :width
    = bed.label :depth, "Depth"
    = bed.text_field :depth
    = bed.hidden_field :user_id, value: @current_user_id
    = bed.submit "Edit Your Garden Details!"
